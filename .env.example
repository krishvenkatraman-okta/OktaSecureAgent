# Session Secret (required for production deployment)
SESSION_SECRET=your-session-secret-here

# Okta Configuration
OKTA_DOMAIN=fcxdemo.okta.com
OKTA_SPA_CLIENT_ID=your-spa-client-id
OKTA_CLIENT_CREDENTIALS_CLIENT_ID=your-client-credentials-client-id
# Note: OKTA_CLIENT_CREDENTIALS_CLIENT_SECRET is retrieved from PAM vault at runtime
OKTA_API_TOKEN=your-okta-api-token

# Privileged Access Management (PAM)
PAM_TEAM_NAME=fcxdemo
PAM_API_KEY_ID=your-pam-api-key-id
PAM_API_KEY_SECRET=your-pam-api-key-secret
PAM_RESOURCE_GROUP_ID=your-pam-resource-group-id
PAM_PROJECT_ID=your-pam-project-id
PAM_SECRET_ID=your-pam-secret-id

# Database (optional - defaults to in-memory storage)
DATABASE_URL=postgresql://username:password@localhost:5432/database

# Development
NODE_ENV=development
PORT=5000